{
    "name": "solitweb/laravel-dashboard-qr-code-tile",
    "description": "A QR code tile for the Laravel Dashboard",
    "keywords": [
        "solitweb",
        "laravel-dashboard-qr-code-tile"
    ],
    "homepage": "https://github.com/solitweb/laravel-dashboard-qr-code-tile",
    "license": "MIT",
    "authors": [
        {
            "name": "Stijn Vanouplines",
            "email": "stijn@solitweb.be",
            "homepage": "https://solitweb.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "spatie/laravel-dashboard": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3"
    },
    "autoload": {
        "psr-4": {
            "Solitweb\\QRCodeTile\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Solitweb\\QRCodeTile\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Solitweb\\QRCodeTile\\QRCodeTileServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
